#--------------------------HomeScreen-----------------------------------------###
<HomeScreen>:
	name:"homeScreen"
	FloatLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source:root.selectWallpaper(app.theme_cls.theme_style)
		spacing: dp(10)
   
		MDToolbar:
			pos_hint: {"top": 1}
	        title: "RegCEl (B2)"
	        anchor_title: 'center'
	        md_bg_color: (17/255, 38/255, 81/255, 1)
	        elevation: 10
	        left_action_items:[["assets/images/logo_icon.png", lambda x: x]]
	        right_action_items:[["close", lambda x: app.confirmCloseDialog()]] 
	    
		MDFloatingActionButton:
			id:recordManagerButton 
	        icon: "assets/images/records.png"
	        elevation_normal: 0
	        pos_hint: {"center_x": .5, "center_y": .75}
	        size_hint: None, None
	        size: dp(150), dp(150)
	        #md_bg_color: 1, 1, 0, 0
	        on_release:
	        	if app.check_permissions():\
				app.root.transition= SlideTransition(direction="left");\
				app.root.current= "registerScreen";\
				app.root.ids.registerScreen.onStartRegisterScr()	    

	    MDFloatingActionButton:
	        icon: "assets/images/about.png"
	        elevation_normal: 0
	        md_bg_color: app.theme_cls.primary_color
	        pos_hint: {"center_x": .5, "center_y": .50}
	        size: dp(150), dp(150)
	        size_hint: None, None
	        md_bg_color: 1, 1, 0, 0
	        on_release: 
	        	app.about()        
	    
	    MDFloatingActionButton:
	        icon: "assets/images/contrib.png"
	        elevation_normal: 0
	        pos_hint: {"center_x": .5, "center_y": .25}
	        size: dp(150), dp(150)
	        size_hint: None, None
	        md_bg_color: 1, 1, 0, 0
	        on_release: app.contrib()

							
#--------------------------------Register Screen--------------------------------------########
<RegisterScreen>:
	name:"registerScreen"
	FloatLayout:
		orientation: 'vertical' 
		#---------------------------header Area--------------------------------------###
		MDToolbar:
			pos_hint: {"top": 1}
	        title: "Registros"
	        anchor_title: 'center'
	        md_bg_color: (17/255, 38/255, 81/255, 1)
	        elevation: 10
	        left_action_items:[["information-outline", lambda x: app.about()]]	         
	        right_action_items:[["assets/images/donate.png", lambda x: app.contrib()]]

	    #Widget: 
		
		        
		#---------------------------Working Layout--------------------------------------###
		BoxLayout:
			pos_hint: {"center_x": .5, "center_y": .400}
			#size: dp(300), dp(150)
			size_hint: 1, .81
			canvas:
				Color:
					rgb: C("#112651")
				Rectangle:
					pos: self.pos
					size: self.size
			ScreenManager:
				id:scrManager

				#---------------Manage Records Screen-----------#
				Screen:
					name:"recordManager"				

					BoxLayout:
						spacing:8
						orientation: 'vertical'
					    #size_hint: (1,None)
						#size: (0,80)
						#orientation: 'vertical'						

						BoxLayout:							
							size_hint: (1,None)
							size: dp(0),dp(40)
							canvas:
								Color:
									#rgba:app.theme_cls.primary_color
									rgb: C("#008094")
								Rectangle:
									pos: self.pos
									size: self.size
							
							#---------------Regist Header-----------------#
							FloatLayout:
								size_hint: (None, 1)
								size_hint_x: 0.3
								orientation: 'vertical'							
								MDIconButton:
									id: seeListBtn
									pos_hint: {"center_x": .95, "center_y":.60}
		                            icon: "calendar"
		                            user_font_size: "15sp"
		                            theme_text_color: "Custom"
						            text_color: (1, 1, 1, 1)
						            font_style: "Caption"							            
						            #size_hint: (0.06,1)
		                            on_release: root.dateRange()
		                        Label:
		                        	id:seeListLabel
		                        	pos_hint: {"center_x": .95, "center_y": .30}
									text:"F/F"
									font_size: "10sp"

							BoxLayout:
								Label:
									text:"F/H"
									bold:True			
							BoxLayout:
								index: 1
								Label:
									text:"Lectura"
									bold:True
							BoxLayout:
								Label:
									text:"Consumo"
									bold:True

							FloatLayout:
								size_hint: None, None
								size: dp(100), dp(40)
								MDIconButton:
									id: generatePdfButton
									pos_hint: {"center_x": .650, "center_y":.60}
		                            icon: "file-pdf-box"
		                            user_font_size: "18sp"
		                            theme_text_color: "Custom"
						            text_color: (1, 1, 1, 1)
						            font_style: "Caption"							            
						            #size_hint: (0.06,1)
		                            on_release: root.generate_records_pdf()
		                        Label:
		                        	id:generatePdfLabel
		                        	pos_hint: {"center_x": .650, "center_y": .30}
									text:"Crear Pdf"
									font_size: "12sp"

	          			#-------------Records Data-----------------#
						BoxLayout:
							size_hint: (1,0.715)
							spacing:"8dp"
							canvas:
								Color:
									rgb: C("#e9ebed")
								Rectangle:
									pos: self.pos
									size: self.size																
							RecycleView:
								id: rv
								#scroll_type: ['bars', 'content']
								scroll_wheel_distance: dp(80)
								bar_width: dp(7)
								viewclass: 'RegistInfo'
								RecycleBoxLayout:
									id: rbl
									default_size: None, dp(35)
									default_size_hint: 1, None
									size_hint_y: None
									height: self.minimum_height
									orientation: "vertical"
									spacing: dp(4)									
						#----totals kw/h and import-------#
						BoxLayout:				
							id:TotalsInfoLayout
							size_hint: (1,0.08)
							spacing:dp(10)
							padding:dp(10)						

							TotalsInfoLabel:
								id: totalConsumo
								title:"Consumo"
								text:'0 kw/h'
							TotalsInfoLabel:
								id: totalImporte
								title:"Importe"
								text:'0.00 $'
		#---------------------------Menu Bar--------------------------------------###
		BoxLayout:
			#orientation:'vertical'
            pos_hint: {"center_x": .5, "top": .90}
            size_hint: 1, 0.09
            spacing: dp(2)
            padding: dp(2)
			canvas:
				Color:
					rgb: C("#e9ebed")
				Rectangle:
					pos: self.pos
					size: self.size
			
            GridLayout:
		        pos_hint: {"x": .2, "top": .98}
		        size_hint: (.5, 1)
		        rows: 2
		        MDIconButton:
		        	#pos_hint: {"x": .2, "top": .95}
		            id: to_home
		            icon: "home"
		            theme_text_color: "Custom"
		            text_color: (17/255, 38/255, 81/255, 1)
		            user_font_size: "35sp"
		            size_hint: (0.01,2)
		            #halign: "left"
		            on_release: 
		            	app.root.transition= SlideTransition(direction="right")
	        			app.root.current= "homeScreen"
		            #size_hint: (0.01, 2)

		        MDLabel:
		        	#pos_hint: {"center_x": .5, "top": 1}
		            id: blank
		            text: "Inicio"
		            theme_text_color: "Custom"
		            text_color: (17/255, 38/255, 81/255, 1)
		            font_style: "Caption"
		            halign: "center"
		            bold: True
		    BoxLayout:
	            pos_hint: {"center_x": .5, "y": -.2}
	            size_hint: (2, 1.5)
	            index: 1
				canvas:
					Color:
						rgb: C("#e9ebed")
			        RoundedRectangle:
			            pos: self.pos
			            size: self.size
			            radius:[10,10,10,10]
				
				BoxLayout:
		            orientation: 'vertical'
		            size_hint: (.35, 1)
		            pos_hint: {"center_x": .5, "center_y": .5}
		            spacing:dp(-3)

				    PanelInfoLabel:
						id: panelfecha
						title:"fecha"
						text:''
					PanelInfoLabel:
						id: panelhora
						title:"hora"
						text:''

				BoxLayout:
					id:panel_layout
					orientation: 'vertical'
		            size_hint: (.5, 1)
		            pos_hint: {"center_x": .5, "center_y": .5}

		            update_from_ID: 0	
		            update_lectS: 0

		            PanelInfoLabel:
		            	#pos_hint: {"center_y": .80}
						id: panelLecturaAnterior
						title:"Ãºltima lectura"
						text:'0'

					BoxLayout:
						size_hint: (1,2.5)
						canvas:
							Color:
								rgb: C("#f1f1f1")
							RoundedRectangle:
					            pos: self.pos
					            size: self.size
					            radius:[5,5,5,5]
					    ShowInputBubble:
					    	TextInput:
						        id: input_field
						        hint_text:"Lectura"
						        input_filter: "int"
						        input_type: "number"
						        #font_name='zekton__.ttf'
						        halign: "center"
						        keyboard_mode: 'managed'
						        pos_hint: {'center_x': .5, 'y': .15}
						        size_hint: (1.05, 0.65)
						        cursor_blink: True
						        font_size: "20sp"
						        multiline: False
						        bold: True
						        on_focus: self.parent.show_bubble()
						        on_text:
									self.text =self.text[:8] if len(self.text)>8 else self.text
									root.ids.panelConsumo.text = str(int(self.text) - int(root.ids.panelLecturaAnterior.text)) if self.text and root.ids.panelLecturaAnterior.text != "0" and int(self.text) > int(root.ids.panelLecturaAnterior.text) else "0"
									root.ids.panelImporte.text = str(calcularImporte(int(root.ids.panelConsumo.text))) if root.ids.panelConsumo.text != "0" else "0.00"
									root.ids.save_regist_Btn.disabled = False if self.text and int(self.text) > int(root.ids.panelLecturaAnterior.text) else True
					
				BoxLayout:
					orientation: 'vertical'
		            size_hint: (.35, 1)
		            pos_hint: {"center_x": .5, "center_y": .5}
		            spacing:dp(-3)

				    PanelInfoLabel:
						id: panelConsumo
						title:"kw/h"
						text:'0'
					PanelInfoLabel:
						id: panelImporte
						title:"imp/$"
						text:'0.00'

	        GridLayout:
	        	index: 1	  
            	#orientation:'vertical'
		        pos_hint: {"right": .2, "top": .98}
		        size_hint: (.5, 1)
		        rows: 2
		        MDIconButton:
		        	id: save_regist_Btn
		            icon: "content-save"
		            theme_text_color: "Custom"
		            text_color: (17/255, 38/255, 81/255, 1)
		            user_font_size: "35sp"
		            font_style: "Caption"
		            disabled: True
		            size_hint: (0.01,2)
		            on_release: root.save_record()

		        MDLabel:
		        	id: save_regist_label
		            text: "Guardar"
		            bold: True
		            theme_text_color: "Custom"
		            text_color: (17/255, 38/255, 81/255, 1)
		            font_style: "Caption"
		            halign: "center"


									
														
