<RegistInfo>:
	canvas.before:
		Color:
			rgb: C("#f3f3f3")
		Rectangle:
			pos: self.pos
			size: self.size
	spacing: "10dp"

	record_id: ''	
	record_date:''
	record_time:''
	lecturaAnterior:''
	lectura:''
	consumo:''
	
	ListItemLayoutRegist:
		size_hint:(0.3,1)
		LabelForList:
			text: ""
			bold: False
			

	GridLayout:
		rows: 2
		cols: 1

		ListItemLayoutRegist:
			size_hint:(0.3,1)
			LabelForList:
				text: root.record_date				
				font_size: '12sp'

		ListItemLayoutRegist:
			LabelForList:
				text: root.record_time
				font_size: '10sp'
				bold: False

	GridLayout:
		rows: 2
		cols: 1

		ListItemLayoutRegist:
			LabelForList:
				text: root.lectura

		ListItemLayoutRegist:
			LabelForList:
				text: root.lecturaAnterior
				font_size: '10sp'
				bold: False
				
			
	GridLayout:
		rows: 2
		cols: 1

		ListItemLayoutRegist:
			LabelForList:
				text: root.consumo
				font_size: '13sp'

		ListItemLayoutRegist:
			LabelForList:
				text: 'kw/h'
				font_size: '10sp'
				bold: False
			

	BoxLayout:
		padding:0
		spacing:2
		size_hint: (None,1)
		width:'90dp'
		HoverLayout:
			on_enter:
				btn1.text_color= [1,1,1,1]
				btn1.md_bg_color= [.5,.5,.5,.5]
			on_leave:
				btn1.text_color=[.4,.4,.4,1]
				btn1.md_bg_color= [.5,.5,.5,0]
			
			MDIconButton:
				id:btn1
				size_hint: (.5,1)
				icon:"pencil"
				theme_text_color: "Custom"
				md_bg_color:[.5,.5,.5,0]
				text_color: [.4,.4,.4,1]
				#opposite_colors: True
				on_release:
					app.root.ids.registerScreen.ids.panel_layout.update_from_ID=root.record_id
					app.root.ids.registerScreen.update_regist_info(root)
		HoverLayout:
			on_enter:
				btn2.text_color=[1,0,0,1]
				btn2.md_bg_color= [.5,.5,.5,.5]
			on_leave:
				btn2.text_color=[.4,0,0,1]
				btn2.md_bg_color= [.5,.5,.5,0]
			MDIconButton:
				id:btn2
				size_hint: (.5,1)
				icon:"delete-forever"
				theme_text_color: "Custom"
				md_bg_color: [.5,.5,.5,0]
				text_color: [.4,0,0,1]
				#opposite_colors: True
				on_release:
					root.delete(app, root)


<InputFields@MDTextField>:
	write_tab:False



<DeleteWarning>:
	size_hint:.8,.4
	text:"Desea eliminar este registro?\n"+self.delete_detail
	pos_hint: {'x': 1.4}
	on_open: self.anim_out(self)
	on_dismiss: self.anim_in(self)
	BoxLayout:
		id:container
		orientation:"vertical"
		canvas:
			Color:
				rgba: app.theme_cls.primary_color
			RoundedRectangle:
				size:self.size
				pos:self.pos
				radius:10,0,0,10
		BoxLayout:
			padding:self.width*.2,0,0,0
			Label:
				text:root.text
				text_size: self.size
				halign: 'left'
				valign: 'middle'
				font_size: "18dp"	#self.height/30+self.width/29
		BoxLayout:
			canvas:
				Color:
					rgba:1,1,0,0
				RoundedRectangle:
					size:self.size
					pos:self.pos
					radius:10,0,0,10
			AnchorLayout:
				id:check
				MDFloatingActionButton:
					icon:"check"
					md_bg_color: (0, 128/255, 148/255, 1)
					on_release:
						root.delete(app, self.text_color)
				
			AnchorLayout:
				MDFloatingActionButton:
					icon:"window-close"
					md_bg_color: (0, 128/255, 148/255, 1)
					id:delete
					on_release:
						root.dismiss()
			
		BoxLayout:
			size_hint_y:.3

