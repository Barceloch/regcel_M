#--------------------------HomeScreen-----------------------------------------###
<HomeScreen>:
	name:"homeScreen"
	FloatLayout:
		orientation: 'vertical'
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source:root.selectWallpaper(app.theme_cls.theme_style)
		spacing: dp(10)
   
		MDToolbar:
			pos_hint: {"top": 1}
	        title: "RegCEl M_v0.1"
	        anchor_title: 'center'
	        md_bg_color: (17/255, 38/255, 81/255, 1)
	        elevation: 10
	        left_action_items:[["flash", lambda x: x]]
	        right_action_items:[["information-outline", lambda x: app.about()]] 
	    
		MDFloatingActionButton:
	        icon: "assets/images/regists.png"
	        elevation_normal: 0
	        pos_hint: {"center_x": .5, "center_y": .75}
	        size_hint: None, None
	        size: dp(150), dp(150)
	        #md_bg_color: 1, 1, 0, 0
	        on_release:
	        	app.root.transition= SlideTransition(direction="left")
	        	app.root.current= "registerScreen"
	        	app.root.ids.registerScreen.onStartRegisterScr()
	    

	    MDFloatingActionButton:
	        icon: "assets/images/about.png"
	        elevation_normal: 0
	        md_bg_color: app.theme_cls.primary_color
	        pos_hint: {"center_x": .5, "center_y": .50}
	        size: dp(150), dp(150)
	        size_hint: None, None
	        md_bg_color: 1, 1, 0, 0
	        on_release: 
	        	app.about()
	        
	    
	    
	    MDFloatingActionButton:
	        icon: "assets/images/salir.png"
	        elevation_normal: 0
	        pos_hint: {"center_x": .5, "center_y": .25}
	        size: dp(150), dp(150)
	        size_hint: None, None
	        md_bg_color: 1, 1, 0, 0
	        on_release: app.confirmCloseDialog()

							
#--------------------------------Register Screen--------------------------------------########
<RegisterScreen>:
	name:"registerScreen"
	BoxLayout:
		orientation: 'vertical' 
		#---------------------------header Area--------------------------------------###
		MDToolbar:
	        title: "Registros"
	        anchor_title: 'center'
	        md_bg_color: (17/255, 38/255, 81/255, 1)
	        elevation: 10
	        left_action_items:[["information-outline", lambda x: app.about()]]	         
	        right_action_items:[["close", lambda x: app.confirmCloseDialog()]]

	    #Widget: 
		#---------------------------Menu Bar--------------------------------------###
		BoxLayout:
			#orientation:'vertical'
            pos_hint: {"center_x": .5, "top": .87}
            size_hint: 1, 0.09
            spacing: dp(2)
            padding: dp(2)
			canvas:
				Color:
					rgb: C("#e9ebed")
				Rectangle:
					pos: self.pos
					size: self.size
			
            GridLayout:
		        pos_hint: {"x": .2, "top": .98}
		        size_hint: (.5, 1)
		        rows: 2
		        MDIconButton:
		        	#pos_hint: {"x": .2, "top": .95}
		            id: to_home
		            icon: "home"
		            theme_text_color: "Custom"
		            text_color: (17/255, 38/255, 81/255, 1)
		            user_font_size: "35sp"
		            size_hint: (0.01,2)
		            #halign: "left"
		            on_release: 
		            	app.root.transition= SlideTransition(direction="right")
	        			app.root.current= "homeScreen"
		            #size_hint: (0.01, 2)

		        MDLabel:
		        	#pos_hint: {"center_x": .5, "top": 1}
		            id: blank
		            text: "Inicio"
		            theme_text_color: "Custom"
		            text_color: (17/255, 38/255, 81/255, 1)
		            font_style: "Caption"
		            halign: "center"
		            bold: True
		    BoxLayout:
	            pos_hint: {"center_x": .5, "y": -.5}
	            size_hint: (2, 2)
				canvas:
					Color:
						rgb: C("#e9ebed")
			        RoundedRectangle:
			            pos: self.pos
			            size: self.size
			            radius:[10,10,10,10]
				
				BoxLayout:
		            orientation: 'vertical'
		            size_hint: (.35, .80)
		            pos_hint: {"center_x": .5, "y": .25}
		            spacing:dp(-3)

				    PanelInfoLabel:
						id: panelfecha
						title:"fecha"
						text:''
					PanelInfoLabel:
						id: panelhora
						title:"hora"
						text:''

				BoxLayout:
					id:panel_layout
					orientation: 'vertical'
		            size_hint: (.5, .93)
		            pos_hint: {"center_x": .5, "y": .12}

		            update_from_ID: "0"	

		            PanelInfoLabel:
		            	pos_hint: {"center_y": .80}
						id: panelLecturaAnterior
						title:"ultima lectura"
						text:'0'

					BoxLayout:
						size_hint: (1,2.5)
						canvas:
							Color:
								#rgba: app.theme_cls.accent_color	
								rgb: C("#f1f1f1")
							RoundedRectangle:
					            pos: self.pos
					            size: self.size
					            radius:[5,5,5,5]					    

			            InputFields:
							id:input_lectura
							hint_text: "Lectura"
							halign: "center"
							color_mode: 'custom'
							input_filter: "int"
							font_size: "18sp"
							bold: True
							#max_text_length: 10
							line_color_focus: (17/255, 38/255, 81/255, 1)
							line_color_normal: (0, 128/255, 148/255, 1)

							
							on_text:
								self.text =self.text[:8] if len(self.text)>8 else self.text
								root.ids.panelConsumo.text = str(int(self.text) - int(root.ids.panelLecturaAnterior.text)) if self.text and int(self.text) > int(root.ids.panelLecturaAnterior.text) else "0"
								root.ids.panelImporte.text = str(calcularImporte(int(root.ids.panelConsumo.text))) if root.ids.panelConsumo.text != "0" else "0.00"
								root.ids.save_regist_Btn.disabled = False if self.text and int(self.text) > int(root.ids.panelLecturaAnterior.text) else True
						#	on_text_validate:
						#		pass
					
				BoxLayout:
		            orientation: 'vertical'
		            size_hint: (.35, .80)
		            pos_hint: {"center_x": .5, "y": .25}
		            spacing:dp(-3)

				    PanelInfoLabel:
						id: panelConsumo
						title:"kw/h"
						text:'0'
					PanelInfoLabel:
						id: panelImporte
						title:"imp/$"
						text:'0.00'

	        GridLayout:	  
            	#orientation:'vertical'
		        pos_hint: {"right": .2, "top": .98}# - app.bottom_buttons_inc}
		        size_hint: (.5, 1)
		        rows: 2
		        MDIconButton:
		        	id: save_regist_Btn
		            icon: "content-save"
		            theme_text_color: "Custom"
		            text_color: (17/255, 38/255, 81/255, 1)
		            user_font_size: "35sp"
		            font_style: "Caption"
		            disabled: True
		            size_hint: (0.01,2)
		            on_release: root.save_record()

		        MDLabel:
		        	id: save_regist_label
		            text: "Guardar"
		            bold: True
		            theme_text_color: "Custom"
		            text_color: (17/255, 38/255, 81/255, 1)
		            font_style: "Caption"
		            halign: "center"

		        
		#---------------------------Working Layout--------------------------------------###
		BoxLayout:
			pos_hint: {"center_x": .5, "top": .87}
			canvas:
				Color:
					rgb: C("#112651")
				Rectangle:
					pos: self.pos
					size: self.size
			ScreenManager:
				id:scrManager

				#---------------Manage Records Screen-----------#
				Screen:
					name:"recordManager"				

					BoxLayout:
						spacing:8
						orientation: 'vertical'
					    #size_hint: (1,None)
						#size: (0,80)
						#orientation: 'vertical'						

						BoxLayout:
							size_hint: (1,None)
							size: dp(0),dp(40)
							canvas:
								Color:
									#rgba:app.theme_cls.primary_color
									rgb: C("#008094")
								Rectangle:
									pos: self.pos
									size: self.size
							
							#---------------Regist Header-----------------#
							FloatLayout:
								size_hint: (None, 1)
								size_hint_x: 0.3
								orientation: 'vertical'							
								MDIconButton:
									id: seeListBtn
									pos_hint: {"center_x": .95, "center_y":.60}
		                            icon: "calendar"
		                            user_font_size: "15sp"
		                            theme_text_color: "Custom"
						            text_color: (1, 1, 1, 1)
						            font_style: "Caption"							            
						            #size_hint: (0.06,1)
		                            on_release: root.dateRange()
		                        Label:
		                        	id:seeListLabel
		                        	pos_hint: {"center_x": .95, "center_y": .30}
									text:"F/F"
									font_size: "10sp"

							BoxLayout:
								Label:
									text:"F/H"
									bold:True			
							BoxLayout:
								Label:
									text:"Lectura"
									bold:True
							BoxLayout:
								Label:
									text:"Consumo"
									bold:True

							FloatLayout:
								size_hint: None, None
								size: dp(100), dp(40)
								MDIconButton:
									id: generatePdfButton
									pos_hint: {"center_x": .400, "center_y":.60}
		                            icon: "file-pdf-box"
		                            user_font_size: "18sp"
		                            theme_text_color: "Custom"
						            text_color: (1, 1, 1, 1)
						            font_style: "Caption"							            
						            #size_hint: (0.06,1)
		                            on_release: root.generate_records_pdf()
		                        Label:
		                        	id:generatePdfLabel
		                        	pos_hint: {"center_x": .400, "center_y": .30}
									text:"Crear Pdf"
									font_size: "12sp"

	          			#-------------Records Data-----------------#
						BoxLayout:
							size_hint: (1,0.715)
							spacing:"8dp"
							canvas:
								Color:
									#rgba:app.theme_cls.primary_color
									rgb: C("#e9ebed")
								Rectangle:
									pos: self.pos
									size: self.size																
							RecycleView:
								id: rv
								scroll_type: ['bars', 'content']
								scroll_wheel_distance: dp(80)
