<DeleteWarning>:
	size_hint:.8,.4
	text:"Desea eliminar este registro?\n"+self.delete_detail
	pos_hint: {'x': 1.4}
	on_open: self.anim_out(self)
	on_dismiss: self.anim_in(self)
	BoxLayout:
		id:container
		orientation:"vertical"
		canvas:
			Color:
				rgba: app.theme_cls.primary_color
			RoundedRectangle:
				size:self.size
				pos:self.pos
				radius:10,0,0,10
		BoxLayout:
			padding:self.width*.2,0,0,0
			Label:
				text:root.text
				text_size: self.size
				halign: 'left'
				valign: 'middle'
				font_size: "18dp"
		BoxLayout:
			canvas:
				Color:
					rgba:1,1,0,0
				RoundedRectangle:
					size:self.size
					pos:self.pos
					radius:10,0,0,10
			AnchorLayout:
				id:check
				MDFloatingActionButton:
					icon:"check"
					md_bg_color: (0, 128/255, 148/255, 1)
					on_release:
						root.delete(app, self.text_color)
				
			AnchorLayout:
				MDFloatingActionButton:
					icon:"window-close"
					md_bg_color: (0, 128/255, 148/255, 1)
					id:delete
					on_release:
						root.dismiss()
			
		BoxLayout:
			size_hint_y:.3

