<RegistInfo>:
	canvas.before:
		Color:
			rgb: C("#f3f3f3")
		Rectangle:
			pos: self.pos
			size: self.size
	spacing: "10dp"

	record_id: ''	
	record_date:''
	record_time:''
	lecturaAnterior:''
	lectura:''
	consumo:''
	lecturaSuperior:''
	
	ListItemLayoutRegist:
		size_hint:(0.3,1)
		LabelForList:
			text: ""
			bold: False
			

	GridLayout:
		rows: 2
		cols: 1

		ListItemLayoutRegist:
			size_hint:(0.3,1)
			LabelForList:
				text: root.record_date				
				font_size: '12sp'

		ListItemLayoutRegist:
			LabelForList:
				text: root.record_time
				font_size: '10sp'
				bold: False

	GridLayout:
		rows: 2
		cols: 1

		ListItemLayoutRegist:
			LabelForList:
				text: root.lectura

		ListItemLayoutRegist:
			LabelForList:
				text: root.lecturaAnterior
				font_size: '10sp'
				bold: False
				
			
	GridLayout:
		rows: 2
		cols: 1

		ListItemLayoutRegist:
			LabelForList:
				text: root.consumo
				font_size: '13sp'

		ListItemLayoutRegist:
			LabelForList:
				text: 'kw/h'
				font_size: '10sp'
				bold: False
			

	BoxLayout:
		padding:0
		spacing:2
		size_hint: (None,1)
		width:'90dp'
		HoverLayout:
			on_enter:
				btn1.text_color= [1,1,1,1]
				btn1.md_bg_color= [.5,.5,.5,.5]
			on_leave:
				btn1.text_color=[.4,.4,.4,1]
				btn1.md_bg_color= [.5,.5,.5,0]
			
			MDIconButton:
				id:btn1
				size_hint: (.5,1)
				icon:"pencil"
				theme_text_color: "Custom"
				md_bg_color:[.5,.5,.5,0]
				text_color: [.4,.4,.4,1]
				on_release:
					app.root.ids.registerScreen.ids.panel_layout.update_from_ID=int(root.record_id)
					app.root.ids.registerScreen.ids.panel_layout.update_lectS=int(root.lecturaSuperior)
					app.root.ids.registerScreen.update_regist_info(root)
		HoverLayout:
			on_enter:
				btn2.text_color=[1,0,0,1]
				btn2.md_bg_color= [.5,.5,.5,.5]
			on_leave:
				btn2.text_color=[.4,0,0,1]
				btn2.md_bg_color= [.5,.5,.5,0]
			MDIconButton:
				id:btn2
				size_hint: (.5,1)
				icon:"delete-forever"
				theme_text_color: "Custom"
				md_bg_color: [.5,.5,.5,0]
				text_color: [.4,0,0,1]
				#opposite_colors: True
				on_release:
					root.delete(app, root)

<CustomBubbleButton>:
    on_release: root.add_text()
        
<NumericKeyboard>:
	numeric_keyboard_layout: numeric_keyboard_layout
